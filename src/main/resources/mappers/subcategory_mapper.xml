<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="subcategory_mapper">
    <select id="getById" resultMap="subcategory_map">
        SELECT
        *
        FROM subcategories s
        LEFT JOIN products_and_subcategories pas ON pas.pas_subcategories_id = s.subcategories_id
        LEFT JOIN products p ON p.prod_id = pas.pas_products_id
        WHERE
        s.scat_id = #{id}
    </select>
    <select id="get" resultMap="subcategory_map">
        SELECT
        *
        FROM subcategories s
        LEFT JOIN products_and_subcategories pas ON pas.pas_subcategories_id = s.subcategories_id
        LEFT JOIN products p ON p.prod_id = pas.pas_products_id
    </select>
    <delete id="deleteById">
        DELETE FROM subcategories WHERE scat_id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO subcategories(scat_name, scat_discountPercent)
        VALUES(#{name}, #{discountPercent})
    </insert>
    <update id="update">
        UPDATE subcategories SET
        scat_name = #{name}
        scat_discountPercent = #{discountPercent}
    </update>

    <resultMap id="subcategory_map" type="com.java.automation.lab.fall.cehanovich.core22.domain.classes.Subcategory" autoMapping="false">
        <id property="id" column="scat_id"/>
        <result property="name" column="scat_name"/>
        <result property="discountPercent" column="scat_discountPercent"/>
    </resultMap>
</mapper>