<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="address_mapper">
    <select id="getById" resultMap="address_map">
        SELECT
        *
        FROM addresses a
        WHERE
        a.addr_id = #{id}
    </select>
    <select id="get" resultMap="address_map">
        SELECT
        *
        FROM addresses a
    </select>
    <delete id="deleteById">
        DELETE FROM addresses WHERE addr_id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO addresses(addr_city, addr_street, addr_house, addr_apartment)
        VALUES(#{city}, #{street}, #{house}, #{apartment})
    </insert>
    <update id="update">
        UPDATE addresses SET
        addr_city = #{city},
        addr_street = #{street},
        addr_house = #{house},
        addr_apartment = #{apartment}
        WHERE addr_id=#{id}
    </update>

    <resultMap id="address_map" type="com.java.automation.lab.fall.cehanovich.core22.domain.classes.Address" autoMapping="false">
        <id property="id" column="addr_id"/>
        <result property="city" column="addr_city"/>
        <result property="street" column="addr_street"/>
        <result property="house" column="addr_house"/>
        <result property="apartment" column="addr_apartment"/>
    </resultMap>
</mapper>