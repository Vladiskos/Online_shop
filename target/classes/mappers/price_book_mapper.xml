<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="price_book_mapper">
    <select id="getById" resultMap="price_book_map">
        SELECT
        *
        FROM price_books c
        WHERE
        c.coup_id = #{id}
    </select>
    <select id="get" resultMap="price_book_map">
        SELECT
        *
        FROM coupons c
    </select>
    <delete id="deleteById">
        DELETE FROM price_books WHERE c.coup_id = #{id}
    </delete>
    <insert id="create">
        INSERT INTO price_books(pb_currency, pb_enabled, pb_validFrom, pb_validTo, pb_date_created, pb_date_modified)
        VALUES(${currency.toString()}, #{enabled}, #{validFrom}, #{validTo}, #{created}, #{modified})
    </insert>
    <update id="update">
        UPDATE price_books SET
        coup_enabled = #{enabled},
        coup_discountPercent = #{discountPercent},
        coup_date_created = #{created},
        coup_date_modified = #{modified}
    </update>
    <resultMap id="price_book_map" type="com.java.automation.lab.fall.cehanovich.core22.domain.classes.PriceBook" autoMapping="false">
        <id property="id" column="coup_id"/>
        <result property="enabled" column="coup_enabled"/>
        <result property="discountPercent" column="coup_discountPercent"/>
        <result property="created" column="coup_date_created"/>
        <result property="modified " column="coup_date_modified"/>
    </resultMap>
</mapper>