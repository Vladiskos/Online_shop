<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product_mapper">
    <select id="getById" resultMap="product_map">
        SELECT
        *
        FROM products p
        WHERE
        p.prod_id = #{id}
    </select>
    <select id="get" resultMap="product_map">
        SELECT
        *
        FROM products p
    </select>
    <delete id="deleteById">
        DELETE FROM products WHERE prod_id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO products(prod_name, prod_brand, prod_description, prod_date_created, prod_date_modified, prod_variations_id)
        VALUES(#{name}, #{brand}, #{description}, #{created}, #{modified}, ${variation.getId()})
    </insert>
    <update id="update">
        UPDATE products SET
        addr_city = #{city},
        addr_street = #{street},
        addr_house = #{house},
        addr_apartment = #{apartment}
        WHERE prod_id=#{id}
    </update>

    <resultMap id="product_map" type="com.java.automation.lab.fall.cehanovich.core22.domain.classes.Product" autoMapping="false">
        <id property="id" column="prod_id"/>
        <result property="name" column="prod_name"/>
        <result property="brand" column="prod_brand"/>
        <result property="description" column="prod_description"/>
        <result property="created" column="prod_date_created"/>
        <result property="modified" column="prod_date_modified"/>
        <association property="variation" resultMap="variation_mapper.variation_map" />
    </resultMap>
</mapper>